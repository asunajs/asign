    "@types/node": "^20.11.17",
    "copyfiles": "^2.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "oxlint": "^0.2.13",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "turbo": "^1.12.3",
    "typescript": "^5.3.3"
  },
